{
    "compilerOptions": {
      "outDir": "./build/",
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "sourceMap": true,
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,

      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "baseUrl": "."
    },
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS",
        }
      }
}